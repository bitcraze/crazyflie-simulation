<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>crazyflie_description</name>
  <version>0.0.0</version>
  <description>
    URDF and mesh files for the Crazyflie micro quadcopter, providing its physical description 
    for simulation and visualization in ROS 2.
  </description>
  <maintainer email="haroon300@hotmail.com">Haroon Rasheed</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
